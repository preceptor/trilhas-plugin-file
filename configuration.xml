<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <name>File</name>
    <description>File manager</description>
    <author>Preceptor Educação a Distância</author>
    <version>1.0</version>
    <license>GPL 3</license>
    <keywords>file, folder, directory, organizer</keywords>
    <url>http://www.preceptoread.com.br</url>
    
    <files>
        <sql>
            <install>data/sql/install.sql</install>
            <uninstall>data/sql/uninstall.sql</uninstall>
        </sql>
        <languages>
            <language name="pt_BR">data/language/pt_BR/file.csv</language>
        </languages>
    </files>
    
    <menus>
        <menu type="tri_classroom_menu">
            <item group="support" resource="file/index/index">file</item>    
        </menu>
    </menus>
    
    <access>
        <resource role="identified">file/index/index</resource>
        <resource role="identified">file/index/download</resource>
        <resource role="teacher">file/index/form</resource>
        <resource role="teacher">file/index/save</resource>
        <resource role="teacher">file/index/delete</resource>
    </access>
</configuration>